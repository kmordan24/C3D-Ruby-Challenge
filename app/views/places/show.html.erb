<section class="place-details">
  <h2>Place Details</h2>

  <h3><%= @place.name %></h3>

  <div class="place__actions">
    <%= link_to "Edit", edit_place_path(@place), class: "button" %>
    <%= button_to "Delete", place_path(@place), class: "button", method: :delete, confirm: "Are you sure?", disabled: @place.has_events? %>
  </div>
</section>
