<h2>Upcoming Events</h2>

<div class="sort-dropdown">
  <%= form_with url: events_path, method: :get, local: true do %>
    <label for="sort">Sort by:</label>
    <%= select_tag :sort, options_for_select([['Name', 'name'], ['Start Date', 'starts_at']], params[:sort]), onchange: 'this.form.submit();' %>
    <%= hidden_field_tag :direction, params[:direction] || 'asc' %>
  <% end %>
</div>

<ul class="event-list">
  <%= render @events %>
</ul>

<%= paginate @events %>
